{
  "server": {
    "hostname": "127.0.0.1",
    "port": 3042,
    "cors": {
      "origin": "https://platformatic.cloud",
      "methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE"
      ]
    }
  },
  "core": {
    "connectionString": "sqlite://db.sqlite",
    "graphql": true,
    "ignore": {
      "versions": true
    }
  },
  "migrations": {
    "dir": "migrations",
    "table": "versions"
  },
  "plugin": {
    "path": "plugin.js"
  },
  "types": {
    "autogenerate": true
  }
}
